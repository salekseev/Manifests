       match => [ "message", "(?m)%{TIMESTAMP_ISO8601:date}%{SPACE}%{LOGLEVEL:level}%{SPACE}%{GREEDYDATA:code_line} - %{GREEDYDATA:message}" ]
       overwrite => ["message"]
   }
   mutate {
           add_field => [ "apikey", "<%= @logstash_api_key -%>" ]
           add_field => [ "tenant_id", "<%= @logstash_tenant_id -%>" ]
   }

}
